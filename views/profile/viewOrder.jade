extends info

block details
    section#cart_items
        .container
            .row
               
            .table-responsive.cart_info
                table.table.table-condensed
                    thead
                        tr.cart_menu
                            td.image
                            td.description Producto
                            td.price Precio Unitario
                            td.quantity Cantidad
                            td.total Total
                    tbody

                        each product in products
                            -var quantity = product.Quantity;
                            -var name = product.ProductName;
                            //-var productLink = '/cat/' + product.CategorySlug + '/' + product.ProductSlug;
                            -var unitPrice = product.ProductPrice;
                            -var productTotal = product.Total;
                            tr
                                td.cart_product
                                   // a(href=productLink)
                                        img(src='/img/products/' + product.Image, alt=name)
                                td.cart_description
                                    h4
                                        a(href=productLink)= name
                                    p= product.Description
                                td.cart_price
                                    p= unitPrice + ' $'
                                td.cart_quantity
                                    p=quantity
                                td.cart_total
                                    p.cart_total_price= productTotal + ' $'
                                    



                
                    thead
                        tr.cart_menu
                            td(colspan=2) Resumen

                    tbody
                        tr
                            td Sub Total
                            td= order.SubTotal + ' $'
                        tr
                            td Descuento
                            td= order.Discount + ' $'
                        tr.shipping-cost
                            td Costo de Envio
                            if order.ShippingFee == 0
                                td Free
                            else
                                td= order.ShippingFee + ' $'
                        tr
                            td Total
                            td
                                span= order.Total + ' $'

